<footer>
   <div class="footer-content">
      {{#if title}}
         <h3>{{title}}</h3>
      {{/if}}

      {{#if links}}
         <ul class="footer-links">
            {{#each links}}
               <li><a href="{{this.url}}">{{this.text}}</a></li>
            {{/each}}
         </ul>
      {{/if}}

      {{#if text}}
         <p>{{text}}</p>
      {{/if}}

      {{#if socialLinks}}
         <div class="social-links">
            {{#each socialLinks}}
               <a href="{{this.url}}" class="social-icon">
                  {{#if this.icon}}
                     <img src="{{this.icon}}" alt="{{@key}} icon">
                  {{/if}}
                  {{this.text}}
               </a>
            {{/each}}
         </div>
      {{/if}}

      <p>&copy; {{currentYear}} {{companyName}}. All rights reserved.</p>
   </div>
   <div class="facebook">

   </div>
</footer>